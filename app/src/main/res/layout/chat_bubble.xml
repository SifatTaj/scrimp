        android:background="@drawable/text_input_border"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:text="Hellowwww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>